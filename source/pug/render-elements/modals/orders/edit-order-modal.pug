							.input-group-text Дата фактическая
						.col-3
							input.form-control(type="date" value="2023-05-22")
					.d-flex.mb-3
						.col-3
							.input-group-text Статус
						.col
							select.form-select(name="status")
								option(selected) В работе
								option Исполнена
								option Не исполнена
								option Отменена
