.modal.fade(id="new-contact-persons-modal" data-bs-backdrop="static" data-bs-keyboard="false")
	.modal-dialog.modal-lg.modal-dialog-scrollable.modal-dialog-centered
		.modal-content
			.modal-header
				.modal-title.fs-5 Новое Контактное лицо ЛПУ
				button.btn-close(type="button" data-bs-dismiss="modal")
			.modal-body
				.d-flex.mb-3
					.col-3
						.input-group-text ФИО водителя
					.col
						input.form-control(type="text" name="name")
				.d-flex.mb-3
					.col-3
						.input-group-text.h-100 Контрагент
					.col
						select.form-select(name="counterparty")
							option(value="1" selected) ООО МЕД ПЛЮ
							option(value="2") ООО Контрагент
				.d-flex.mb-3
					.col-3
						.input-group-text Адрес вывоза отходов
					.col
						select.form-select(name="address")
							option(selected value="1") Липецк Ковалева д.125
							option(value="2") Воронеж Лизюкова 2
				.d-flex.mb-3
					.col-3
						.input-group-text Логин
					.col
						input.form-control(type="text" name="login")
				.d-flex.mb-3
					.col-3
						.input-group-text Пароль
					.col
						input.form-control(type="password" name="password")
				.d-flex.mb-3
					.col-3
						.input-group-text.h-100 Телефон контрактный
					.col
						input.form-control(type="tel" name="tel")
				.d-flex.mb-3
					.col-3
						.input-group-text Статус
					.col
						select.form-select(name="status")
							option(selected value="1") Активен
							option(value="2") Заблокирован
			.modal-footer
				button.btn.btn-dark(type="button") Сохранить
				button.btn.btn-danger(type="button" data-bs-dismiss="modal") Отменить